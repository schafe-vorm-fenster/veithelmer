{# 
  Film Tile Component
  Phase 6.2.2: Streaming Service UI Component
  
  @param {string} title - Film title
  @param {string} year - Release year
  @param {string} image - Image URL/path
  @param {string} url - Link to film detail page
  @param {string} [category] - Optional category badge (Feature, Short, etc.)
#}

{% macro filmTile(title, year, image, url, category) %}
<article class="film-tile group relative overflow-hidden bg-brand-darkgray transition-all duration-300 ease-out hover:scale-105 hover:z-10">
  <a href="{{ url }}" class="block no-underline" aria-label="View {{ title }} ({{ year }})">
    
    {# 3:2 Aspect Ratio Container #}
    <div class="relative w-full" style="aspect-ratio: 3/2;">
      
      {# Film Image #}
      <img 
        src="{{ image }}" 
        alt="{{ title }} ({{ year }})"
        class="w-full h-full object-cover transition-transform duration-300 ease-out"
        loading="lazy"
      />
      
      {# Hover Overlay with Title and Year #}
      <div class="absolute inset-0 bg-black/0 group-hover:bg-black/70 transition-all duration-300 ease-out flex flex-col justify-end p-6 opacity-0 group-hover:opacity-100">
        
        {# Optional Category Badge #}
        {% if category %}
        <span class="absolute top-4 left-4 px-3 py-1 bg-white/20 backdrop-blur-sm text-xs font-bold uppercase tracking-wider">
          {{ category }}
        </span>
        {% endif %}
        
        {# Title and Year #}
        <h3 class="text-2xl font-bold mb-1 tracking-tight">{{ title }}</h3>
        <p class="text-base opacity-80">{{ year }}</p>
      </div>
      
    </div>
    
  </a>
  
  {# Hover Shadow Effect #}
  <div class="absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300 shadow-2xl"></div>
</article>
{% endmacro %}
